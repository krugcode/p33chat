# pb config
POCKETBASE_SU_EMAIL=admin@p33chat.com
POCKETBASE_SU_PASSWORD=p33chatisverycool
PB_TYPEGEN_URL=http://pocketbase:8090
PB_TYPEGEN_EMAIL=admin@p33chat.com
PB_TYPEGEN_PASSWORD=p33chatisverycool

# app config
APP_URL=http://localhost:5173
POCKETBASE_PUBLIC_URL=http://localhost:8090
SENDER_EMAIL=noreply@yourdomain.com
SALT=your_random_salt_string_here_make_it_long_and_secure
REGISTRATION_DISABLED=false
FORGOT_PASSWORD_DISABLED=true

# smtp/email config (brevo recommended)
SMTP_PASSWORD=your_smtp_password_here
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_LOGIN=your_email@yourdomain.com

# s3 storage configuration (optional)
S3_ENABLED=false
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_FORCE_PATH_STYLE=false

# backup configuration
BACKUP_CRON=0 2 * * *
BACKUP_MAX_KEEP=7
BACKUP_S3_ENABLED=false
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ENDPOINT=https://s3.amazonaws.com
BACKUP_S3_ACCESS_KEY=your_backup_access_key
BACKUP_S3_SECRET_KEY=your_backup_secret_key
BACKUP_S3_FORCE_PATH_STYLE=false

# logging configuration
LOG_MAX_DAYS=7
LOG_MIN_LEVEL=0
LOG_IP=true
LOG_AUTH_ID=false

# rate limiting configuration
RATE_LIMITS_ENABLED=false
RATE_LIMIT_AUTH_DURATION=60
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_CREATE_DURATION=60
RATE_LIMIT_CREATE_MAX=10
RATE_LIMIT_API_DURATION=60
RATE_LIMIT_API_MAX=100
